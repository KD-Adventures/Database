
# Widget para o nome dos filmes
<FilmeLabel>:
	#on_parent: self.configura_filme_label()
	shorten: True
	shorten_from: 'right'
	halign: 'left'
	padding: 10, 5


# Widget principal
<RedeSocial>:
	cols: 2
	rows: 2
	padding: 10, 10
	spacing: 10
	#on_size: root.mostra_informacoes(False)

	canvas:
		Color:
			rgba: .25, 0, 0, 1
		Rectangle:
			pos: self.pos
			size: self.size

	# Nome do usuario no topo da tela
	Label:
		size_hint_y: .1
		id: label_usuario
		font_size: 30
		text: root.nome_usuario_atual
		pos: 0, root.height - self.height

	# Barra de pesquisa
	TextInput:
		size_hint: .4, .1
		id: input_pesquisa
		font_size: 25
		multiline: False
		pos: root.width - self.width, root.height - self.height
		on_text_validate: root.define_usuario(self.text)

	# Regiao inferior esquerda
	BoxLayout:
		#Recomendacoes
		BoxLayout:
			size_hint_x: .7
			orientation: 'vertical'

			#Recomendações de filmes
			Label:
				size_hint_y: .1
				text: 'Filmes recomendados'
			ScrollView:
				GridLayout:
					size_hint_y: None
					spacing: 5
					id: grid_recom_filmes
					cols: 1
					height: self.minimum_height
					row_default_height: 20
			#Recomendacoes de amigos
			Label:
				size_hint_y: .1
				text: 'Você talvez conheça'
			ScrollView:
				GridLayout:
					size_hint_y: None
					spacing: 5
					id: grid_recom_amigos
					cols: 1
					height: self.minimum_height
					row_default_height: 20

		#Filmes e Artistas
		BoxLayout:
			orientation: 'vertical'
			Label:
				size_hint_y: .1
				text: 'Filmes Curtidos'
			ScrollView:
				GridLayout:
					size_hint_y: None
					spacing: 5
					id: grid_filmes
					cols: 1
					height: self.minimum_height
					row_default_height: 20
			Label:
				size_hint_y: .1
				text: 'Artistas Curtidos'
			ScrollView:
				GridLayout:
					size_hint_y: None
					spacing: 5
					id: grid_artistas
					cols: 1
					height: self.minimum_height
					row_default_height: 20
		

	# Lista de amigos
	BoxLayout:
		size_hint_x: .25
		id: amigos
		orientation: 'vertical'
		Label:
			size_hint_y: .05
			text: 'Amigos'
		ScrollView:
			GridLayout:
				padding: 15, 5
				spacing: 5
				size_hint_y: None
				id: grid_amigos
				orientation: 'vertical'	
				height: self.minimum_height
				cols: 1
				rows: root.qtdade_amigos
				row_default_height: 30
